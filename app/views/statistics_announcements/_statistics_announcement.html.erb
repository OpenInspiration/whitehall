<li class="document-row">
  <h3><%= link_to statistics_announcement.title, statistics_announcement_path(statistics_announcement) %></h3>
  <ul class="attributes">
    <li><%= statistics_announcement.display_date_with_status %></li>
    <li><%= statistics_announcement.document_type %></li>
    <%- statistics_announcement.organisations.each do |org| -%>
      <li><%= link_to org.name, organisation_path(org) %></li>
    <%- end -%>
    <%- statistics_announcement.topics.each do |policy_area| -%>
      <li><%= link_to policy_area.name, policy_area_path(policy_area) %></li>
    <%- end -%>
  </ul>
</li>
